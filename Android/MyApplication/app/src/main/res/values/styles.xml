<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorDisplayContainer">
        <item name="android:background">@color/display_container_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textSize">38sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalculatorInputContainer">
        <item name="android:background">@color/input_container_background</item>
    </style>

    <style name="CalculatorInputButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/input_item_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>